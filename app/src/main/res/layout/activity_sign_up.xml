<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignUpActivity"
        android:orientation="vertical">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher" android:id="@+id/imageView2"
            android:layout_marginTop="30dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSignUpName" android:hint="Adynyz" android:layout_margin="5dp"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSignUpEmail" android:hint="Email "
            android:layout_margin="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="5dp">
        <TextView
                android:text="+993"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:textSize="20sp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/edtSignUpPhone" android:hint="Telefon belginiz"/>
    </LinearLayout>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edtSignUpPassword" android:hint="Parolynyz" android:layout_margin="5dp"/>
    <Button
            android:text="Registratsiya et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSignUpSignUp"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp" android:textSize="20sp" android:textColor="#F2F2F2"/>
    <Button
            android:text="Ulgama Girmek"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSigUpLogin"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp" android:textSize="20sp" android:textColor="#F2F2F2"/>
    <Button
            android:text="BaÅŸ sahypa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btnSignUpMainPage"
            android:background="@drawable/button_shape"
            android:layout_margin="10dp" android:textSize="20sp" android:textColor="#F2F2F2"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">

    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <RelativeLayout
            android:layout_width="354dp"
            android:layout_height="115dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:gravity="center_horizontal" android:id="@+id/relativeLayout"
            app:layout_constraintHorizontal_bias="0.51">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center_horizontal" android:id="@+id/linearLayout">
            <TextView
                    android:text="+993"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    android:gravity="left" android:textSize="24sp"
                    android:drawableLeft="@drawable/phone"
            />
            <EditText
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/edtLoginPhone" android:layout_width="wrap_content"
                    android:hint="Telefon belginizi girin"
            />
        </LinearLayout>
        <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edtLoginPassword"
                android:layout_marginBottom="78dp" android:layout_marginTop="10dp"
                android:layout_below="@+id/linearLayout" android:layout_alignParentEnd="true"
                android:layout_marginEnd="52dp" android:layout_alignParentStart="true"
                android:layout_marginStart="53dp" android:hint="Parolynyzy girin"
                android:drawableLeft="@drawable/password"
        />
    </RelativeLayout>
    <Button
            android:text="Regıstratsıya bolmak"
            android:layout_width="200dp"
            android:layout_height="wrap_content" android:id="@+id/btnLoginSignUp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginLogin" android:background="@drawable/button_shape"
            android:textColor="#F2F2F2"/>
    <Button
            android:text="Baş sahypa"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoginMainPage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLoginSignUp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:background="@drawable/button_shape" android:textColor="#F2F2F2"/>
    <Button
            android:text="Ulgama Gir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnLoginLogin" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="#F2F2F2" android:background="@drawable/button_shape"/>
</androidx.constraintlayout.widget.ConstraintLayout>